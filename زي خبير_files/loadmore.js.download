jQuery(document).ready(function($){var next_page=parseInt(ronalfy_load_more.current_page)+1;var max_pages=parseInt(ronalfy_load_more.max_pages);var cat=$('.paging-navigation').attr('data-cat');var tag=$('.paging-navigation').attr('data-tag');var post_type=$('.paging-navigation').attr('data-post-type');tag=decodeURI(tag);if(next_page<=max_pages){var linke_txt=$('.paging-navigation').attr('data-text');var success_message=$('.paging-navigation').attr('data-message');$('.paging-navigation').html('<button class="btn btn-default btn-lode-more load-more">'+linke_txt+'</button>');}
var mt_ajax_load_posts=function(){$.post(ronalfy_load_more.ajaxurl,{action:'load_posts',next_page:next_page,cat:cat,tag:tag,post_type:post_type},function(response){next_page=response.next_page;max_pages=response.max_pages;cat=response.cat;tag=response.tag;post_type=response.post_type;var html=$.parseHTML(response.html);$('.posts .post:last').after(html);$("img.lazy").lazyload({effect:"fadeIn"});$('.paging-navigation').html('<button class="btn btn-default btn-lode-more load-more">'+linke_txt+'</button>');if(next_page>max_pages){successMessage='<div class="success text-center"><p>رائِع! لقد شاهدت جميع المقالات.</p></div>';$('.paging-navigation').html(successMessage);}},'json');};$('.paging-navigation').on('click','.load-more',function(e){e.preventDefault();mt_ajax_load_posts();$('.paging-navigation').html('<div class="loader"></div>');});});